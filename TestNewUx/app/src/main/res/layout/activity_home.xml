<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yeelight.testnewux.HomeActivity">


    <ImageButton
        android:id="@+id/Alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="140dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/alarm"
        android:src="@mipmap/hoala_alarm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/light"
        android:src="@mipmap/hoala_light"
        app:layout_constraintStart_toEndOf="@+id/Alarm"
        app:layout_constraintTop_toTopOf="@+id/Alarm" />


    <ImageButton
        android:id="@+id/Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/settings"
        android:src="@mipmap/hoala_settings"
        app:layout_constraintStart_toStartOf="@+id/Alarm"
        app:layout_constraintTop_toBottomOf="@+id/Light" />

    <ImageButton
        android:id="@+id/Temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="80dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/temperature"
        android:src="@mipmap/hoala_temperature"
        app:layout_constraintStart_toEndOf="@+id/Alarm"
        app:layout_constraintTop_toBottomOf="@+id/Light" />


</android.support.constraint.ConstraintLayout>